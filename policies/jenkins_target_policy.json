{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SSMWriteAccess",
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameter",
                "ssm:PutParameter"
            ],
            "Resource": "arn:aws:ssm:*:*:parameter/eks-ami/*"
        },
        {
            "Sid": "EKSReadAccess",
            "Effect": "Allow",
            "Action": [
                "eks:DescribeCluster",
                "eks:ListNodegroups",
                "eks:DescribeNodegroup",
                "eks:ListUpdates",
                "eks:DescribeUpdate"
            ],
            "Resource": "*"
        },
        {
            "Sid": "EC2ASGReadAccess",
            "Effect": "Allow",
            "Action": [
                "autoscaling:DescribeAutoScalingGroups",
                "ec2:DescribeInstances"
            ],
            "Resource": "*"
        }
    ]
}